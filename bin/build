#!/usr/bin/env php
<?php
/*
requires installing of:
- for this script: php
- for js: node npm
	sudo npm install -g uglifyjs
- for css: node npm sass postcss-cli autoprefixer cssnano css-mqpacker
	sudo npm install -g postcss-cli autoprefixer cssnano css-mqpacker

*/
$projectRoot = __DIR__ . '/..';
$distPath = $projectRoot . '/dist';
if(count($argv) > 1){
	$tasks = array_slice($argv, 1);
}else{
	$tasks = Array('php', 'js', 'css');
}
$verbose = true;

if(!is_dir($distPath)){
	mkdir($distPath, 0755, true);
}

foreach($tasks as $task){
	switch($task){
		case 'php':
			if($verbose){
				echo "building php scripts\n";
			}
			foreach(Array(
				'/',
				'/info/',
				'/project/',
			) as $relDir){
				$dir = $distPath . $relDir;
				if(!is_dir($dir)){
					mkdir($dir, 0755, true);
				}
				$dest = $dir . 'index.php';
				$fileContents = "<?php\n";
				$fileContents .= "\$route = '{$relDir}';\n";
				$fileContents .= "require(__DIR__ . '" . str_repeat('/..', substr_count($relDir, '/')) . "/src/run/web.php');";
				file_put_contents(
					$dest
					, $fileContents
				);
			}
		break;
		case 'js':
		case 'scripts':
			if($verbose){
				echo "building js scripts\n";
			}
			chdir($projectRoot);
			foreach(Array(
				Array(
					'src'=> $projectRoot . '/src/scripts/empty-cache.js'
					,'dest'=> $distPath . '/empty-cache.js'
				)
				,Array(
					'src'=> $projectRoot . '/src/scripts/main.js'
					,'dest'=> $distPath . '/main.js'
				)
				,Array(
					'src'=> $projectRoot . '/src/scripts/pre.js'
					,'dest'=> $distPath . '/pre.js'
				)
			) as $data){
				//-#mangle shrunk gzipped weight of main.js by 0.2kb at time of testing
				$command = 'uglifyjs --compress --mangle --mangle-props reserved=["TJM","baseUrl","hasCache","v"]' . (isset($data['opts']) ? ' ' . $data['opts'] : '') . ' -- ' . $data['src'] . ' > ' . $data['dest'];
				//$command = 'cat ' . $data['src'] . ' > ' . $data['dest'];
				//-# may need for newer versions of uglify --support-ie8
				passthru($command);
			}
		break;
		case 'css':
		case 'styles':
			if($verbose){
				echo "building styles\n";
			}
			$command =
				'sassc ' . $projectRoot . '/src/styles/builds/main.scss'
				. ' | npx postcss --trace'
				. ' > ' . $distPath . '/main.css'
			;
			passthru($command);
		break;
		default:
			echo "undefined task {$task}";
		break;
	}
}
